{
  "type": "object",
  "additionalProperties": false,

  "patternProperties": {
    "^[A-Za-z0-9_-]+/[A-Za-z0-9_-]+:[A-Za-z0-9_-]+$": {
      "type": "object",
      "required": ["sonar", "options"],
      "additionalProperties": false,

      "properties": {
        "sonar": {
          "type": "object",
          "required": ["enabled"],
          "additionalProperties": false,

          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "organization": {
              "type": "string",
              "pattern": "^[a-z-]+$"
            },
            "project-key": {
              "type": "string",
              "pattern": "^[A-Z0-9a-z_-]+$"
            },
            "host-url": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "options": {
          "type": "object",
          "required": ["prefix"],
          "additionalProperties": false,

          "properties": {
            "prefix": {
              "type": "string"
            },
            "custom_directory": {
              "type": "string"
            },
            "abandoned": {
              "type": "boolean"
            },
            "createJar": {
              "type": "boolean"
            },
            "ignoreTags": {
              "type": "boolean"
            }
          }
        },
        "dependencies": {
          "type": "object",
          
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,

            "patternProperties": {
              "^[0-9]+$": {
                "type": "string"       
              }
            }
          }
        }
      }
    }
  }
}
